<h2>コンサルタント一覧</h2>
<%# ログインしているのがゲストユーザーの場合 %>
<% if @user %>
  <%= link_to user_path(@user) do %>
    <h3 class="card-title"><%= @user.name %></h3>
    <p class="card-text"><%= @user.profession %></p>
    <p class="card-text"><%= @user.rating %></p>
  <% end %>
<%# ログインしているのがゲストユーザーではない場合 %>
<% else %>
  <% @users.each do |user| %>
    <%# コンサルタントのみ表示 %>
    <% if user.is_consultant %>
      <div class="card">
        <div class="card-body">
          <%= link_to user_path(user) do %>
            <h3 class="card-title"><%= user.name %></h3>
            <p class="card-text"><%= user.profession %></p>
            <p class="card-text"><%= user.rating %></p>
          <% end %>
        </div>
    <% end %>
  <% end %>
<% end %>