<h2 class="edit-title">プロフィール編集</h2>

<%= form_with model: @user, local: true, html: { class: 'edit-form' } do |f| %>
  <div class="form-group">
    <%= f.label :profession, "職業" %>
    <%= f.text_field :profession, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :profile, "自己紹介" %>
    <%= f.text_area :profile, class: 'form-control-L' %>
  </div>

  <div class="form-group">
    <%= f.label :skill, "スキル/知識" %>
    <%= f.text_area :skill, class: 'form-control-L' %>
  </div>

  <%= f.submit "更新する", class: 'btn btn-primary' %>
<% end %>
