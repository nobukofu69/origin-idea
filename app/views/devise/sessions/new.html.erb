<div class="login-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2>ログイン</h2>
    <div class="field">
      <%= f.label :"メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
    </div>
    <div class="field">
      <%= f.label :"パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
    </div>
    <div class="actions">
      <%= f.submit "ログイン", class: "login-button" %>
    </div>
    <p>または</p>
    <%= link_to "ゲストログイン", users_guest_sign_in_path, data: { turbo_method: :post }, class: "guest-link" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>