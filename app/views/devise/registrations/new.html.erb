<div class="register-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2>会員登録</h2>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field"  %>
    </div>

    <div class="field">
      <%= f.label :"ユーザー名" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "usernamae", class: "input-field" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード" %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
    </div>

    <div class="field">
      <%= f.label :"生年月日" %><br />
      <%= f.date_select :birthdate,
        start_year: Date.today.year,
        end_year: Date.today.year - 100,
        use_month_numbers: true,
        date_separator: '/' %>
    </div>

    <div class="field">
      <%= f.label :"性別" %><br />
      <%= f.radio_button :gender, 'male' %> 男性
      <%= f.radio_button :gender, 'female' %> 女性
      <%= f.radio_button :gender, 'other' %> その他
    </div>

    <div class="agree">
      <a href="#" >利用規約</a>
      と
      <a href="#" >プライバシーポリシー</a>
      に同意の上ご登録ください
    </div>

    <div class="actions">
      <%= f.submit "登録する", class: "register-button" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>